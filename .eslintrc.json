{
  "extends": "@rocketseat/eslint-config/react",
  "plugins": ["simple-import-sort"],
  "rules": {
    "import/newline-after-import" : "error",
    "import/no-duplicates": "error",
    "simple-import-sort/imports": ["error", {
      "groups": [
        ["^react", "/hooks"],
        ["/components"],
        ["/lib", "/utils"],
        ["/assets", "/styles"]
      ]
    }] 
  }
}